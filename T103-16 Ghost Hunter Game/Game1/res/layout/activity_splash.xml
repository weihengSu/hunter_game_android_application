<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splashA"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@null"
        android:src="@drawable/uva_icon" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/splash_txt"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="104dp"
        android:layout_toLeftOf="@+id/splash_txt2"
        android:contentDescription="@null"
        android:src="@drawable/icon1" />

    <TextView
        android:id="@+id/splash_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/img1"
        android:layout_marginRight="99dp"
        android:text="@string/hello_class"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/splash_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/splash_txt2"
        android:layout_centerVertical="true"
        android:layout_marginLeft="111dp"
        android:gravity="center"
        android:text="@string/hello_members"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>